{# src/Dao/BackendBundle/Resources/views/Admin/export.html.twig #}
{% trans_default_domain "EasyAdminBundle" %}
{% extends ':easy_admin:layout.html.twig' %}

{% block title %}My cool blog posts{% endblock %}

{% block body_id 'easyadmin-new-user' %}
    {% block body_class 'new new-user' %}

{% block content_title %}
    {{ 'system.info'|trans }}
{% endblock %}

{% block main %}
    <div class="bs-example">
        <form class="form-horizontal">

            <div class="form-group">
                <label for="inputEmail" class="control-label col-xs-2">{{ 'choice.language'|trans }}</label>
                <div class="col-xs-6">
                    <select name="lang" id="lang" class="form-control input-sm"
                            onchange="window.location='{{ url('admin_my_config') }}?lang=' + this.options[this.selectedIndex].value;
                                    return false;">
                        <option value="vn">Viá»‡t Nam</option>
                        <option value="en">English</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label for="inputEmail" class="control-label col-xs-2">Export data</label>
                <div class="col-xs-6">
                    <button type="submit"
                            onclick="window.location='{{ url('admin_export') }}';return false;"
                            class="btn btn-success">Exporting</button>
                </div>
            </div>
            <div class="form-group">
                <label for="inputEmail" class="control-label col-xs-2">Import data</label>
                <div class="col-xs-6">
                    <button type="submit" onclick="" class="btn btn-warning">Importing</button>
                </div>
            </div>

        </form>
    </div>

{% endblock %}